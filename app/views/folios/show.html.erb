<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @folio_item.main_image unless @folio_item.main_image.nil? %>
    </div>

    <div class="col-md-5">
      <h1><%= @folio_item.title %></h1>
      <hr />
      <em><%= @folio_item.subtitle %></em>
      <p><%= @folio_item.body %></p>
      <hr />
      <h3>Technologies Used</h3>
      <% @folio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
