<div class="container folio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag folio_img(@folio_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @folio_item.title %></h1>
      <hr />
      <em><%= @folio_item.subtitle %></em>
      <p><%= markdown @folio_item.body %></p>
      <hr />
      <h3>Technologies Used</h3>
      <% @folio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit Item", edit_folio_path(@folio_item), class:'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
