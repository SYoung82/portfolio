<p id="notice"><%= notice %></p>

<h1>React Portfolio Items</h1>

<%= link_to "Create New Item", new_folio_path if logged_in?(:site_admin) %>

<% @react_folio_items.each do |item| %>
  <p><%= link_to item.title, folio_show_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %><br/>
  <%= link_to "Edit", edit_folio_path(item) if logged_in?(:site_admin) %><br/>
  <%= link_to 'Delete Portfolio Item', folio_path(item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  <hr>
<% end %>