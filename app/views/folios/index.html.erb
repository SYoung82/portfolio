<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_folio_path %>

<% @folio_items.each do |item| %>
  <p><%= item.title %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %><br/>
  <%= link_to "Edit", edit_folio_path(item.id) %>
  <hr>
<% end %>